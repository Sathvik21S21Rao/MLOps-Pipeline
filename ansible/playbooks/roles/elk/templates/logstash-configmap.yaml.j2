apiVersion: v1
kind: ConfigMap
metadata:
  name: logstash-pipeline
  namespace: {{ k8s_namespace }}
data:
  logstash.conf: |
    input {
      tcp {
        port => 5044
        codec => json_lines
      }
    }

    output {
      elasticsearch {
        hosts => ["http://elasticsearch:9200"]
        index => "model-metrics-%{+YYYY.MM.dd}"
      }
      stdout { codec => rubydebug }
    }
