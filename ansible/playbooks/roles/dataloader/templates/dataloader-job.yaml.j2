apiVersion: batch/v1
kind: Job
metadata:
  name: dataloader-{{ inventory_hostname | replace('.', '-') }}
  namespace: {{ k8s_namespace }}
spec:
  backoffLimit: 2
  template:
    spec:
      restartPolicy: OnFailure
      containers:
        - name: dataloader
          image: {{ dataloader_image }}
          env:
            - name: HF_DATA_PATH
              value: "/app/data"
            - name: HF_API_TOKEN
              valueFrom:
                secretKeyRef:
                  name: hf-api-token-secret
                  key: HF_API_TOKEN
           
          volumeMounts:
            - name: data-volume
              mountPath: /app/data
          resources:
            limits:
              cpu: "500m"
              memory: "512Mi"
      volumes:
        - name: data-volume
          persistentVolumeClaim:
            claimName: data-pvc
