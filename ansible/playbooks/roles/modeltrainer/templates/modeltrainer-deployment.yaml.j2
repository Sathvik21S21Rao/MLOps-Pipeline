{% set safe_model = (model_name | default('model') | string).lower().replace('_','-') %}
apiVersion: batch/v1
kind: Job
metadata:
  name: modeltrainer-{{ safe_model }}
  namespace: {{ k8s_namespace }}
spec:
  template:
    metadata:
      labels:
        app: modeltrainer-{{ safe_model }}
    spec:
      restartPolicy: Never
      containers:
        - name: modeltrainer
          image: {{ modeltrainer_image }}
          env:
            - name: CLASSIFIER
              value: {{ model_name }}
            - name: MODEL_TYPE
              value: {{ model_name }}
            - name: PROCESSED_DATA_PATH
              value: "/app/data"
            - name: HF_API_TOKEN
              valueFrom:
                secretKeyRef:
                  name: hf-api-token-secret
                  key: HF_API_TOKEN
            - name: LOGSTASH_HOST
              value: "logstash"
            - name: LOGSTASH_PORT
              value: "5004"
            - name: MODEL_OUTPUT_DIR
              value: "/model"
          volumeMounts:
            - name: data-volume
              mountPath: /app/data
            - name: model-output-volume
              mountPath: /model
          resources:
            limits:
              cpu: "1000m"
              memory: "1Gi"
      volumes:
        - name: data-volume
          persistentVolumeClaim:
            claimName: data-pvc
        - name: model-output-volume
          persistentVolumeClaim:
            claimName: model-output-pvc
  backoffLimit: 0