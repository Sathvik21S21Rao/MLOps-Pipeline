apiVersion: apps/v1
kind: Deployment
metadata:
  name: drift-monitor
  namespace: {{ k8s_namespace }}
  labels:
    app: drift-monitor
spec:
  replicas: 1
  selector:
    matchLabels:
      app: drift-monitor
  template:
    metadata:
      labels:
        app: drift-monitor
    spec:
      containers:
        - name: drift-monitor
          image: "{{ driftmonitor_image }}"
          imagePullPolicy: IfNotPresent
          env:
            - name: ELASTICSEARCH_HOST
              value: "elasticsearch"
            - name: ELASTICSEARCH_PORT
              value: "9200"
            - name: ELASTICSEARCH_USER
              value: "elastic"
            - name: ELASTICSEARCH_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: drift-monitor-secret
                  key: elasticsearch-password
            - name: JENKINS_URL
              value: "{{ jenkins_url }}"
            - name: JENKINS_JOB
              value: "{{ jenkins_job | default('MLOps-Pipeline') }}"
            - name: JENKINS_USER
              valueFrom:
                secretKeyRef:
                  name: drift-monitor-secret
                  key: jenkins-user
            - name: JENKINS_TOKEN
              valueFrom:
                secretKeyRef:
                  name: drift-monitor-secret
                  key: jenkins-token
            - name: CHECK_INTERVAL_SECONDS
              value: "{{ drift_check_interval | default('300') }}"
            - name: LOOKBACK_MINUTES
              value: "{{ drift_lookback_minutes | default('15') }}"
            - name: SKEWNESS_THRESHOLD
              value: "{{ drift_skewness_threshold | default('0.7') }}"
            - name: MIN_SAMPLES
              value: "{{ drift_min_samples | default('50') }}"
          resources:
            requests:
              memory: "128Mi"
              cpu: "100m"
            limits:
              memory: "256Mi"
              cpu: "200m"
